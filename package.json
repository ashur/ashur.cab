{
  "name": "ashur.cab",
  "author": "Ashur Cabrera <hello@ashur.cab>",
  "scripts": {
    "build-dev": "npm run build-html && npm run build-images && npm run build-scss",
    "build-dist": "npm run clean && npm run build-html && npm run build-scss && npm run build-images",
    "build-html": "cp -R src/html/* dist",
    "build-images": "cp -R src/images/ dist/images",
    "build-js": "browserify src/js/main.js -o dist/main.js -t [ babelify --presets [ @babel/preset-env ] ]",
    "build-js-dist": "browserify -g uglifyify src/js/main.js -o dist/main.js -t [ babelify --presets [ @babel/preset-env ] ]",
    "build-scss": "node-sass --output-style compressed -o dist src/scss/",
    "clean": "rm -rf dist && mkdir dist",
    "serve": "serve -l tcp://$SITE_SERVER:5000 dist",
    "start": "npm run build-dev && concurrently -n watch,serve \"npm:watch\" \"npm:serve\"",
    "watch-html": "onchange 'src/html/**/*.html' -- npm run build-html",
    "watch-images": "onchange 'src/images/**/*' -- npm run build-images",
    "watch-js": "onchange 'src/js/**/*' -- npm run build-js",
    "watch-scss": "onchange 'src/scss/**/*.scss' -- npm run build-scss",
    "watch": "concurrently -n html,images,js,scss \"npm:watch-html\" \"npm:watch-images\" \"npm:watch-js\" \"npm:watch-scss\""
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "babelify": "^10.0.0",
    "browserify": "^13.0.1",
    "chai": "^4.2.0",
    "concurrently": "^4.0.1",
    "node-sass": "^4.9.3",
    "onchange": "^4.1.0",
    "serve": "^10.1.2",
    "uglifyify": "^5.0.1"
  }
}
